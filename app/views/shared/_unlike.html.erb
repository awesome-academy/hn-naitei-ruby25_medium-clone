<%= form_for([article, current_user.favorites.find_by(article_id: article.id)],
    method: :delete) do |f| %>
  <%= f.hidden_field :article_id, value: article.id %>
  <%= button_tag(type: 'submit', class: "action-btn") do %>
    <%= bootstrap_icon "heart-fill", height: Settings.default.view.edit_profile.icon_size %>
    <%= article.like_count %>
  <% end %>
<% end %>
