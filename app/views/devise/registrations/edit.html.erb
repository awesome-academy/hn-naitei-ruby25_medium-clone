<div class="w-50 mx-auto">
  <h2><%= t "devise.edit.title" %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <%= render "avatar_edit", form: f, resource: resource %>
    <div class="mb-3">
      <%= f.label :username, class: "form-label" %>
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :address, class: "form-label" %>
      <%= f.text_field :address, autocomplete: "street-address", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :phone_number, class: "form-label" %>
      <%= f.phone_field :phone_number, autocomplete: "tel", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :date_of_birth, class: "form-label" %>
      <%= f.date_field :date_of_birth, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :bio, class: "form-label" %>
      <%= f.text_area :bio, class: "form-control", rows: 4 %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="alert alert-warning" role="alert">
        <%= t "devise.edit.waiting_confirmation" %> <%= resource.unconfirmed_email %>
      </div>
    <% end %>

    <div class="mb-3">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      <small class="form-text text-muted">
        <%= t "devise.edit.leave_password_blank" %>.
        <% if @minimum_password_length %>
          <%= t "devise.validations.password", count: @minimum_password_length %>
        <% end %>
      </small>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <hr class="my-4">

    <div class="mb-3">
      <%= f.label :current_password, class: "form-label fw-bold" %>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control is-required" %>
      <small class="form-text text-muted"><%= t "devise.edit.current_password_prompt" %></small>
    </div>

    <div class="actions mt-4">
      <%= f.submit "Update", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="card bg-light my-5">
    <div class="card-body">
      <h5 class="card-title"><%= t "devise.edit.cancel_title" %></h5>
      <p class="card-text"><%= t "devise.edit.cancel_prompt" %></p>
      <%= button_to t("devise.edit.cancel_button"), registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %>
    </div>
  </div>

  <%= link_to t("devise.edit.back"), :back, class: "btn btn-secondary" %>
</div>
